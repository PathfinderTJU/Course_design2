.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 1000;
left:0;top:0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.modal_box {
  width: 76%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #fafafa;
  margin: -150px 12% 0 12%;
  border-radius: 3px;
}
 
 
.content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}

