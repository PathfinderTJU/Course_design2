/* pages/editor/editor.wxss */
@import "/pages/editor/editor_template/editor_template.wxss";

page{
  background-color: rgb(235, 235, 235);
}

.outside_block{
  margin-bottom: 25%;
}

.title_block, .abstract_block{
  margin: 30rpx 50rpx;
  padding: 50rpx;
  background-color: white;
  border-radius: .25rem;
  box-shadow: 0 5px 5px 0 rgb(192, 192, 192);
}

#title_title, #abstract_title{
  color: #3E3E3E;
  margin-bottom: 30rpx;
  font-size: 35srpx;
}

#title_content, #abstract_content{
  color: #a0a0a0; 
  font-size: 30rpx;
}



.row{
    position: fixed;
    overflow: hidden;
    justify-content: flex-start;
    display: flex;
    flex-direction: row;
    left: 0;
    right: 0;
    bottom: 0px;
    background-color: white;
    height: 10%;
}

.item_bg{
    position: relative;
    float: left; 
    padding: 0px 0px;
    width: 33.33333333%;
    box-sizing: border-box;
}
.item_icon{
    width: 32px;
    height: 32px;
    margin: 10px 45px;
}

.item_icon image{
    display: block;
    width: 100%;
    height: 100%;
}

.item_icon + .text{
   margin-top: 5px;
}

.text{
    display: block;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-weight: normal;
    color:#1195db; 
    font-size: 14px;
}

