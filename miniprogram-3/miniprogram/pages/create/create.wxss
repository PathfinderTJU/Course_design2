/* pages/create/create.wxss */
page{
  background-color:  rgb(235, 235, 235);
}

.outside_block{
  padding: 150rpx 80rpx 0 80rpx;
  display: flex;
  justify-content: space-between;
}

.new_block, .old_block{
  background-color: white;
  height: 250rpx;
  width: 250rpx;
  box-shadow: 0 5px 5px 0 rgb(192, 192, 192);
}

#new_img, #old_img{
  display: block;
  color: #3aa7f9;
  text-align: center;
}

#new_img{
  font-size: 80rpx;
  margin: 50rpx 0 30rpx 0;
}

#old_img{
  font-size: 60rpx;
  margin: 60rpx 0 40rpx 0;
}

#new_title, #old_title{
  display: block;
  text-align: center;
}